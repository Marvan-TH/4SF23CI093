<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>So Sorry</title>
    <!-- Load Tailwind CSS -->
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
        /* Using a simple, cute font */
        body {
            font-family: ui-sans-serif, system-ui, -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, "Noto Sans", sans-serif;
        }
        /* Custom animation for the button */
        @keyframes sway {
            0% { transform: rotate(0deg); }
            50% { transform: rotate(1deg); }
            100% { transform: rotate(0deg); }
        }
        .sway-animation {
            animation: sway 1.5s ease-in-out infinite;
        }
    </style>
</head>
<body class="bg-blue-50 min-h-screen p-4 flex items-center justify-center">

    <div id="apology-card" class="w-full max-w-sm text-center bg-white shadow-xl rounded-3xl p-8 md:p-10 border-4 border-blue-200">

        <!-- Title / Focus Message -->
        <div id="apology-message" class="mb-8">
            <p class="text-4xl mb-4 text-pink-500">
                ü•∫
            </p>
            <h1 class="text-2xl md:text-3xl font-extrabold text-gray-800 leading-snug">
                I'm really sorry for hurting you yesterday.
            </h1>
        </div>

        <!-- Hidden Sorry/Forgiveness Card -->
        <div id="sorry-card" class="bg-pink-100 p-4 rounded-xl shadow-inner mb-8 transition duration-500 ease-in-out opacity-0 hidden">
            <p class="text-lg font-semibold text-pink-700">
                I know my words were stupid, and I truly regret them. Please forgive me, pretty please? üôè
            </p>
        </div>

        <!-- Action Button -->
        <button id="forgive-me-button" class="w-full py-3 text-lg font-bold text-white bg-pink-400 rounded-full shadow-lg hover:bg-pink-500 transition duration-300 focus:outline-none focus:ring-4 focus:ring-pink-300 active:bg-pink-600 sway-animation">
            Tap for my 'Sorry' Face
        </button>

        <!-- Forgiveness Confirmation -->
        <div id="confirmation-message" class="hidden mt-6 p-4 bg-green-100 text-green-700 rounded-xl border-2 border-green-300 text-center text-lg font-semibold shadow-md">
            THANK YOU! Sending you a virtual hug and a promise to be better. ‚ù§Ô∏è
        </div>

    </div>

    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const apologyCard = document.getElementById('apology-card');
            const sorryCard = document.getElementById('sorry-card');
            const forgiveMeButton = document.getElementById('forgive-me-button');
            const confirmationMessage = document.getElementById('confirmation-message');
            const apologyMessage = document.getElementById('apology-message');

            // Initial delay to show the "Sorry" card and change the button
            let step = 0;

            forgiveMeButton.addEventListener('click', () => {
                if (step === 0) {
                    // Step 1: Show the hidden message and prompt for forgiveness
                    sorryCard.classList.remove('hidden');
                    setTimeout(() => {
                        sorryCard.classList.remove('opacity-0');
                    }, 50);

                    apologyMessage.classList.add('opacity-50'); // Dim the main text slightly
                    forgiveMeButton.textContent = "Okay, I forgive you! (Tap to confirm)";
                    forgiveMeButton.classList.remove('sway-animation');
                    forgiveMeButton.classList.add('bg-purple-500', 'hover:bg-purple-600', 'focus:ring-purple-300');
                    step = 1;

                } else if (step === 1) {
                    // Step 2: Confirmation
                    forgiveMeButton.classList.add('hidden');
                    sorryCard.classList.add('hidden');
                    apologyMessage.classList.add('hidden');

                    confirmationMessage.classList.remove('hidden');
                    apologyCard.classList.add('border-green-300');
                    apologyCard.classList.remove('border-blue-200');

                    console.log("Forgiveness confirmed! Success.");
                }
            });
        });
    </script>
</body>
</html>

